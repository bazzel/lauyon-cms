<%= form_for [refinery, :partners_admin, @partner] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @partner,
              :include_object_name => true %>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @partner.logo,
               :toggle_image_display => false %>

  </div>

  <div class='field'>
    <span class='label_with_help'>
      <%= f.label :url, t('.url') -%>
      <%= refinery_help_tag t('.url_help') %>
    </span>
    <%= f.text_field :url, :style => 'width:400px;' -%>
  </div>

  <div class='field'>
    <span class='label_with_help'>
      <%= f.label :show_on_page, t('.show_on_page') -%>
      <%= refinery_help_tag t('.show_on_page_help') %>
    </span>
    <%= f.check_box :show_on_page, :checked => @partner[:show_on_page]  -%>
    <%= f.label :show_on_page, t('.show_on_page_description'),
                :class => "stripped" %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.partners.admin.partners.partner'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @partner.name) %>
<% end -%>
